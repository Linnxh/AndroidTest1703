<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.lxh">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <receiver android:name=".BootBroadcastReceiver">
        <intent-filter>
            <action android:name="android.intent.action.BOOT_COMPLETED" />
        </intent-filter>
    </receiver>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme2">
        <activity android:name=".activity.MainActivity2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:label="MainActivity" />
        <activity
            android:name=".activity.AlbumActivity"
            android:label="AlbumActivity" />
        <activity
            android:name=".activity.SingleMediaActivity"
            android:label="@string/title_activity_single_media"
            android:theme="@style/AppTheme" />

        <service android:name=".service.AppService" />

        <receiver android:name=".AppAlarmReceiver">
            <intent-filter android:priority="1000">
                <action android:name="com.lxh.myreceiver" />
            </intent-filter>
        </receiver>

        <activity android:name=".activity.SpannActivity"></activity>
        <activity android:name=".calender.CalendarActivity"></activity>
    </application>

</manifest>